<!-- ✅ NEW FLEX WRAPPER -->
<div class="flex-wrapper">
  <!-- ✅ EXISTING FORM CONTAINER -->
  <div class="form-container">
    <h2>CONTACT US</h2>
    <form action="/contact" method="POST">
      <!-- flash messages begin -->
      <%- include('includes/flash')%>
      <!-- flash messages end -->

      <input name="emailContact" id="email-contact" type="email" placeholder="Email" />
      <input name="firstName" id="fullName" type="text" placeholder="First Name" />
      <input name="lastName" id="fullName" type="text" placeholder="Last Name" />

      <select name="topic" id="topic">
        <option value="" disabled selected>Select Topic</option>
        <option value="financialPlanning">Financial Planning</option>
        <option value="businessConsulting">Business Consulting</option>
        <option value="trustDrafting">Trust Drafting</option>
        <option value="assetManagement">Asset Management</option>
        <option value="other">Other</option>
      </select>

      <input name="contactSource" id="contact-source" type="text" placeholder="How you heard of us" />
      <textarea name="contactMessage" id="contact-message" placeholder="How can we help you?"></textarea>
      <div class="button-group">
        <button type="submit" class="login-btn">Send</button>
      </div>
    </form>
  </div>
</div>

